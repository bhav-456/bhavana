import java.util.ArrayList;
import java.util.Scanner;

/**
 * The Student class represents a single student with a name, roll number, and grade.
 */
class Student {
    // Properties of the Student
    private String name;
    private int rollNumber;
    private String grade;

    // Constructor to initialize a new Student object
    public Student(String name, int rollNumber, String grade) {
        this.name = name;
        this.rollNumber = rollNumber;
        this.grade = grade;
    }

    // Getter method for the student's name
    public String getName() {
        return name;
    }

    // Getter method for the student's roll number
    public int getRollNumber() {
        return rollNumber;
    }

    // Getter method for the student's grade
    public String getGrade() {
        return grade;
    }

    // Method to display the details of the student
    @Override
    public String toString() {
        return "Roll Number: " + rollNumber + ", Name: " + name + ", Grade: " + grade;
    }
}

/**
 * The StudentManagement class contains the main logic for the application,
 * including adding, viewing, and searching for students.
 */
